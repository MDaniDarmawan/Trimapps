<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="0dp">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">


            <ImageView
                android:id="@+id/profile_picture"
                android:layout_width="125dp"
                android:layout_height="125dp"
                android:layout_alignParentTop="true"
                android:layout_gravity="center"
                android:layout_marginTop="36dp"
                android:scaleType="centerCrop"
                android:src="@drawable/group_111" />

            <TextView
                android:id="@+id/textProfile"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="4dp"
                android:textSize="22sp"
                android:textStyle="bold"
                tools:text="Profil Anda"/>



            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/button"
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:layout_marginStart="32dp"
                android:layout_marginTop="10dp"
                android:layout_marginEnd="32dp"
                android:layout_marginBottom="10dp"
                android:background="@drawable/bn_background"
                android:drawableStart="@drawable/baseline_account_circle_24"
                android:drawablePadding="20dp"
                android:paddingStart="20dp"
                android:text="Muhammad Khilmi"
                android:textSize="18sp"
                android:textStyle="bold"
                style="@android:style/Widget.Button"
                android:textAlignment="viewStart" />

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/button3"
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:layout_marginStart="32dp"
                android:layout_marginTop="10dp"
                android:layout_marginEnd="32dp"
                android:textSize="18sp"
                android:textStyle="bold"
                style="@android:style/Widget.Button"
                android:layout_marginBottom="10dp"
                android:background="@drawable/bn_background"
                android:drawableStart="@drawable/baseline_email_24"
                android:drawablePadding="20dp"
                android:paddingStart="20dp"
                android:text="khilmi23@gmail.com"
                android:textAlignment="viewStart" />
            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/button4"
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:layout_marginStart="32dp"
                android:layout_marginTop="10dp"
                android:textSize="18sp"
                android:textStyle="bold"
                style="@android:style/Widget.Button"
                android:layout_marginEnd="32dp"
                android:layout_marginBottom="10dp"
                android:background="@drawable/bn_background"
                android:drawableStart="@drawable/baseline_lock_24"
                android:paddingStart="20dp"
                android:text="KhilmiGakpakeE"
                android:drawablePadding="10dp"
                android:textAlignment="viewStart" />
            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/button5"
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:layout_marginStart="32dp"
                android:layout_marginTop="10dp"
                android:layout_marginEnd="32dp"
                android:textSize="18sp"
                android:textStyle="bold"
                style="@android:style/Widget.Button"
                android:layout_marginBottom="10dp"
                android:background="@drawable/bn_background"
                android:drawableStart="@drawable/baseline_lock_24"
                android:drawablePadding="20dp"
                android:paddingStart="20dp"
                android:text="TifC22"
                android:textAlignment="viewStart" />
            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/button6"
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:layout_marginStart="32dp"
                android:layout_marginTop="10dp"
                android:layout_marginEnd="32dp"
                android:textSize="18sp"
                android:textStyle="bold"
                style="@android:style/Widget.Button"
                android:layout_marginBottom="10dp"
                android:background="@drawable/bn_background"
                android:drawableStart="@drawable/baseline_settings_24"
                android:drawablePadding="20dp"
                android:paddingStart="20dp"
                android:text="Pengaturan"
                android:textAlignment="viewStart" />

            <Button
                android:id="@+id/btn_1"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_centerHorizontal="true"
                android:width="250dp"
                android:background="@drawable/buttom_shape"
                android:text="KELUAR"
                android:layout_marginStart="32dp"
                android:layout_marginTop="20dp"
                android:layout_marginEnd="32dp"
                android:textColor="@color/white"
                android:textSize="20dp"
                android:fontFamily="@font/poppins_bold"/>
        </LinearLayout>


    </ScrollView>
</androidx.constraintlayout.widget.ConstraintLayout>